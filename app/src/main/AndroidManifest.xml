<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.student.smartETailor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartETailorDesignRecommender">

        <activity
            android:name=".ui.Tailor.AddDesignActivity"
            android:theme="@style/Theme.SmartETailorDesignRecommender.NoActionBar" />
        <activity
            android:name=".ui.Tailor.TailorDesignsActivity"
            android:label="Designs" />
        <activity
            android:name=".ui.ProfileActivity"
            android:label="My Profile" />
        <activity
            android:name=".ui.OrderActivity"
            android:label="Orders" />
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.AddMeasurementsActivity"
            android:label="Create Measurement" />
        <activity
            android:name=".ui.Tailor.TailorMeasurementsActivity"
            android:label="Measurements" />
        <activity
            android:name=".ui.SignupActivity"
            android:theme="@style/Theme.SmartETailorDesignRecommender.NoActionBar" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.SmartETailorDesignRecommender.NoActionBar" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartETailorDesignRecommender.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>