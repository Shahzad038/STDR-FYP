<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".ui.AddMeasurementsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Check out the measurement method below and enter your body measurements below this design"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_measurement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/measurement_male"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_neck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Neck"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_shoulders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Shoulders"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_sleeves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Sleeves"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_chest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Chest"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_waist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Waist"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_hips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Hips"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_inseam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Inseam"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_thigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_2"
                    android:hint="Thigh"
                    android:inputType="numberDecimal"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/RLCreateMeasurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_btn_1"
                android:gravity="center"
                android:paddingStart="50dp"
                android:paddingTop="3dp"
                android:paddingEnd="50dp"
                android:paddingBottom="3dp"
                android:shadowColor="#00000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Create measurement"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>